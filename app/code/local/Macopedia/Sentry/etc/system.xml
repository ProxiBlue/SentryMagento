<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <macopedia translate="label" module="macopedia_sentry">
            <label>Macopedia</label>
            <sort_order>10</sort_order>
        </macopedia>
    </tabs>
    <sections>
        <macopedia_sentry translate="label" module="macopedia_sentry">
            <label>Sentry logging</label>
            <tab>macopedia</tab>
            <frontend_type>text</frontend_type>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable translate="label">
                            <label>Enable Sentry JavaScript logging</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable>
                        <app_url>
                            <label>Application URL</label>
                            <frontend_type>text</frontend_type>
                            <comment><![CDATA[URL from your config: "Raven.config('{{YOUR URL}}').install();"]]></comment>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </app_url>
                        <env_type>
                            <label>Environment type</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </env_type>
                        <whitelist_urls>
                            <label>Whitelist URLs</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Domains (comma separated) to allow errors logged from.  <a href="https://blog.sentry.io/2017/03/27/tips-for-reducing-javascript-error-noise">ref</a>]]></comment>
                        </whitelist_urls>
                    </fields>
                </general>
                <patch translate="label">
                    <label>Patch Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <ignore_strings>
                            <label>Ignore errors with these strings in patched Mage.php</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Ignore errors from these urls. (One entry per line)]]></comment>
                        </ignore_strings>
                    </fields>
                </patch>
            </groups>
        </macopedia_sentry>
    </sections>
</config>
